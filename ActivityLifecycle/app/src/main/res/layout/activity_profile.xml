<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:src="@drawable/tony_stark_new" />

    <TextView
        android:id="@+id/txtNameStark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:text="Tony Stark"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEmailStark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNameStark"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:text="tony@starkindustries.com"
        android:textColor="#000" />

    <TextView
        android:id="@+id/txtPhoneNoStark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEmailStark"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:text="+91 33343444333" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgTonyStark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="More Info" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="Exit App" />
</RelativeLayout>